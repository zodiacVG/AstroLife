{
  "name": "astrolife-monorepo",
  "version": "1.0.0",
  "description": "星航预言家 - 基于航天器神谕的智能占卜系统",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --port 8000",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && echo 'Backend build complete'",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "clean": "rm -rf frontend/dist backend/__pycache__",
    "docker:up": "echo 'docker-compose.yml 未提供，如需容器化请补充配置'",
    "docker:down": "echo 'docker-compose.yml 未提供，如需容器化请补充配置'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["astrology", "space", "ai", "fortune-telling"],
  "author": "AstroLife Team",
  "license": "MIT"
}
